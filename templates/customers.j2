                    <input type="text" class="form-control" id="customer_last_name" name="customer_last_name" placeholder="" required>

                    <label for="make">Mailing Address:</label>
                    <input type="text" class="form-control" id="customer_street" name="customer_street" placeholder="" required>

                    <label for="make">City:</label>
                    <input type="text" class="form-control" id="customer_city" name="customer_city" placeholder="" required>

                    <label for="make">State:</label>
                    <input type="text" class="form-control" id="customer_state" name="customer_state" placeholder="" required>

                    <label for="make">Zip Code:</label>
                    <input type="text" class="form-control" id="customer_zip" name="customer_zip" placeholder="" required>

